{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"module": "CommonJS",
		"lib": ["ES2020"],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"target": "ES2020",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"baseUrl": "."
	},
	"include": ["src", "../types"]
}
